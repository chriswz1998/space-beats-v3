generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                   String                @id
  name                 String
  email                String
  emailVerified        Boolean               @default(false)
  image                String?
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  sessions             Session[]
  accounts             Account[]
  userSongAchievements UserSongAchievement[]
  userAchievements     UserAchievement[]
  songs                Song[]
  roomsInvited         Room[]                @relation("RoomInviter")
  roomsReceived        Room[]                @relation("RoomInvitee")
  roomPlayers          RoomPlayer[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model Song {
  id          String @id @default(cuid())
  name        String
  duration    Int
  author      String
  url         String
  easyChart   Json
  normalChart Json
  hardChart   Json
  achievement String
  userId      String
  user        User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt            DateTime              @default(now())
  userSongAchievements UserSongAchievement[]
  rooms                Room[]

  @@index([userId])
}

model UserSongAchievement {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  songId String
  song   Song   @relation(fields: [songId], references: [id])

  // Highest score for this song
  highScore Int @default(0)

  // Core achievement flags (boolean for simplicity)
  isCleared    Boolean @default(false) // Cleared
  isFullCombo  Boolean @default(false) // Full combo
  isAllPerfect Boolean @default(false) // All perfect

  updatedAt DateTime @updatedAt

  // Composite unique index: one progress record per user per song
  @@unique([userId, songId])
}

enum AchievementType {
  FIRST_EXPERIENCE // Complete the first song
  PERFECT_MASTER // All perfect on a single song
  HIGH_SCORE_CHALLENGER // Score over 100,000 on a single song
  RHYTHM_EXPERT // Accuracy above 90%
  COMPLETIONIST // Complete all songs
}

enum GameResultStatus {
  VICTORY
  GAMEOVER
}

model UserAchievement {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  type       AchievementType // Achievement type
  unlockedAt DateTime        @default(now()) // Unlock time

  // Composite unique index: one instance per user per achievement
  @@unique([userId, type])
}

enum RoomStatus {
  PENDING_ACCEPT // 等待被邀请人接受
  READY // 已接受，准备就绪 (只有这个状态或PLAYING状态下，前端按钮才可点击进入)
  PLAYING // 游戏中
  COMPLETED // 游戏结束 (双方都已完成)
  REJECTED // 被邀请人拒绝
  EXPIRED // 邀请过期
}

model Room {
  id     String     @id @default(cuid())
  songId String
  song   Song       @relation(fields: [songId], references: [id])
  status RoomStatus @default(PENDING_ACCEPT)

  // 邀请人信息
  inviterId String
  inviter   User   @relation("RoomInviter", fields: [inviterId], references: [id])

  // 被邀请人信息 (可能还没注册，所以保留email，但如果接受了必须关联User)
  inviteeEmail String
  inviteeId    String?
  invitee      User?   @relation("RoomInvitee", fields: [inviteeId], references: [id])

  // 难度选择
  difficulty String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 关联两个玩家的具体战绩记录
  players RoomPlayer[]

  @@index([inviterId])
  @@index([inviteeId])
  @@index([songId])
  @@map("room")
}

model RoomPlayer {
  id     String @id @default(cuid())
  roomId String
  room   Room   @relation(fields: [roomId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id])

  // --- 游戏结果数据 ---
  score        Int   @default(0)
  perfectCount Int   @default(0)
  goodCount    Int   @default(0)
  missCount    Int   @default(0)
  accuracy     Float @default(0)
  maxCombo     Int   @default(0) // 建议加上连击数

  // --- 状态控制 ---

  // 是否已完赛：前端上传分数时设为 true
  // 后端逻辑：当Room中两个Player的 hasFinished 都为 true 时，将 Room.status 改为 COMPLETED
  hasFinished Boolean @default(false)

  // 是否已查看结果：用于控制“消息删除/消失”
  // 逻辑：首页轮询到 Room COMPLETED -> 弹窗 -> 用户点击关闭/确认 -> 设置 hasViewedResult = true
  // 前端查询消息列表时，过滤掉 hasViewedResult = true 的记录
  hasViewedResult Boolean @default(false)

  result     GameResultStatus? // VICTORY / GAMEOVER (可选，或者通过比较分数动态计算)
  finishedAt DateTime? // 完赛时间

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([roomId, userId]) // 确保一个用户在一个房间只有一条记录
  @@index([userId])
  @@map("room_player")
}
